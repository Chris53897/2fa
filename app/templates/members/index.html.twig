{% extends "base.html.twig" %}

{% block body %}
    <h1>Welcome to Member's Area</h1>
    <p>This is a secured page, only accessible when 2fa has been completed</p>
    {% if displayQrCodeGa %}
        <hr/>
        <p>GA secret: {{ app.user.googleAuthenticatorSecret }}</p>
        <p><img src="{{ path("qr_code_ga") }}" /></p>
    {% endif %}

    {% if displayQrCodeTotp %}
        <hr/>
        <p>TOTP:</p>
        <p><img src="{{ path("qr_code_totp") }}" /></p>
    {% endif %}
{% endblock %}
